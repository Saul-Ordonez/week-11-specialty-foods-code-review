<h1><%= @product.name %></h1>
<h3>$<%= @product.cost %></h3>
<h3><%= @product.country_of_origin %></h3>



<% if @product.reviews.any? %>
<h4>Reviews:</h4>

<% @product.reviews.each do |review| %>
<ul>
  <li>
    <%= link_to review.author, product_review_path(@product, review) %>
  </li>
</ul>
<% end %>
<% else %>
<p>No one has reviewed this vehicle yet.</p>
<% end %>

<p><%= link_to "Add a review", new_product_review_path(@product) %></p>

<p><%= link_to "Return to vehicle list", products_path %></p>

<% if current_user.admin == true %>
<a><%= link_to "Edit", edit_product_path(@product) %></a>  |
<a><%= link_to "Delete", product_path(@product),
  :data => {:confirm => "You sure?",
  :method => "delete"} %></a>
  <% end %>
